import java.util.*;
public class Array{
public static void main(String args[])
{
 Scanner sc=new Scanner(System.in);
 int n=sc.nextInt();
int sum=0,avg;
 int[]arr=new int[n];
  for(int i=0;i<n;i++)
  {
    arr[i]=sc.nextInt();
   }
for(int i=0;i<n;i++)
{
  sum=sum+arr[i];
}
avg=sum/n;
System.out.println(sum);
System.out.println(avg);
}
}
